// Функция за показване на картите в ръката
void showHand(const vector<string>& hand) {
    // Итерация през всяка карта в ръката
    for (const string& card : hand) {
        // Извеждане на текущата карта с интервал
        cout << card << " ";
    }
    // Добавяне на нов ред след извеждането на всички карти
    cout << endl;
}
