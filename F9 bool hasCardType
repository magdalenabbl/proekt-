// Function to check if the player's hand contains a specific card type
bool hasCardType(const vector<string>& hand, const string& cardType) {
    // Iterate through each card in the player's hand
    
    for (int i = 0; i < hand.size(); i++) {
        if (hand[i] == cardType) {
            return true;
        }
    }
    
    // If no card matches the specified type, return false
    return false;
}
