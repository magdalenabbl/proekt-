// проверка дали дадена карта съществува в ръката
bool hasCardType(const vector<string>& hand, const string& cardType) {
    // обхождаме всички карти в ръката
    for (int i = 0; i < hand.size(); i++) {
        // ако намерим картата
        if (hand[i] == cardType) {
            return true; // връщаме true, ако картата е намерена
        }
    }
    return false; // ако не е намерена картата, връщаме false
}
